<UserControl x:Class="ConvergenceEngine.Views.AppControls.ProcessIndicator"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:ConvergenceEngine.Views.AppControls">
    <Grid>
        <ProgressBar
            IsIndeterminate="{Binding ModelReady,
            Converter={StaticResource BoolInverse}}"/>

        <TextBlock
            Text="{Binding ModelCurrentState}"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"/>
    </Grid>
</UserControl>