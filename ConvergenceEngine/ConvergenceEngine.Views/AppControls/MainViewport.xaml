<UserControl x:Class="ConvergenceEngine.Views.AppControls.MainViewport"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:ConvergenceEngine.Views.AppControls">
    <Grid Background="{StaticResource DeepGray}">
        <Viewbox>
            <Image
                Source="{Binding MapViewportData,
                Converter={StaticResource PointSequenceToImageSource},
                ConverterParameter={x:Static Colors.Red}}"/>
        </Viewbox>
    </Grid>
</UserControl>