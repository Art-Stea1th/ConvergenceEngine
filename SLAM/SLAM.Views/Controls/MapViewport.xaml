<Border x:Class="SLAM.Views.Controls.MapViewport"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:SLAM.Views.Controls"
        Background="Black">
    <Border.DataContext>
        <local:MapViewport/>
    </Border.DataContext>
    <Grid>
        <Viewbox>
            <Image
            Source="{Binding ViewportData}"
            Width="640"
            Height="480"/>
        </Viewbox>
        <Line
            HorizontalAlignment="Center"
            X1="0" Y1="0" X2="0" Y2="1" 
            Stroke="Green" 
            Stretch="Fill"
            StrokeThickness="1"
            />
    </Grid>
    
    
</Border>