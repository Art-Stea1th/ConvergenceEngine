<Window x:Class="SLAM.Views.AppWindows.LinearDataWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:cc="clr-namespace:SLAM.Views.Controls.Custom"
        Title="{Binding Title}" Width="480" Height="480">
    <Grid Background="Black">
        <Viewbox>
            <Path
                Data="{Binding Segments,
                Converter={StaticResource PointSegmentsToPath}}"/>
        </Viewbox>
    </Grid>
</Window>