<Application x:Class="SLAM.Views.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:SLAM.Views"
    xmlns:converters="clr-namespace:SLAM.ViewModels.Converters;assembly=SLAM.ViewModels"
    xmlns:controls="clr-namespace:SLAM.Views.Controls"
    xmlns:viewmodels="clr-namespace:SLAM.ViewModels;assembly=SLAM.ViewModels"
    StartupUri="MainWindow.xaml">
    
    <Application.Resources>

        <converters:IntToBoolConverter x:Key="IntToBool"/>
        <converters:BoolInverseConverter x:Key="BoolInverse"/>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibility"/>
        <converters:BoolToVisibilityConverterInverse x:Key="BoolToVisibilityInverse"/>
        <converters:IntToVisibilityConverter x:Key="IntToVisibility"/>
        <converters:IntToVisibilityConverterInverse x:Key="IntToVisibilityInverse"/>

        <controls:RectangularCSViewport x:Key="RectangularCSViewport"/>

        <viewmodels:MainVindowViewModel x:Key="MainVindowViewModel"/>
        
    </Application.Resources>
</Application>